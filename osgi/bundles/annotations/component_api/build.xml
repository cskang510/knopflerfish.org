<?xml version="1.0" encoding="UTF-8"?>

<project name="component_annotations" default="all">

  <dirname  property="proj.dir" file="${ant.file.component_annotations}"/>
  <property name="topdir"       location="${proj.dir}/../../.."/>

  <property name="api.pattern" value="org/osgi/service/component/annotations/**"/> 

  <property name = "bundle.build.lib"   value = "false"/>
  <property name = "bundle.build.api"   value = "true"/>
  <property name = "bundle.build.impl"  value = "false"/>
  <property name = "bundle.build.all"   value = "false"/>

  <path id="bundle.compile.path">
    <pathelement location="namespace_api-N.N.N.jar"/>
  </path>

  <import file="${topdir}/../ant/bundlebuild.xml"/>

</project>
